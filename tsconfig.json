{
   "include": [
      "./typescript"
   ],
   "compileOnSave": true,
   "compilerOptions": {
      // Webpack can (and will) duplicate modules if two imports are cased differently
      "forceConsistentCasingInFileNames": true,
      "alwaysStrict": true,
      "removeComments": true,
      "target": "es2016",
      "module": "ES6",
      "outDir": "./javascript/compiled",
      "inlineSourceMap": true,
      "inlineSources": true,
      "watch": false,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "strict": true,
   }
}